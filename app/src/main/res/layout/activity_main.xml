<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_0"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="0" />

        <Button
            android:id="@+id/button_point"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="." />

        <Button
            android:id="@+id/button_equels"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="=" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <Button
            android:id="@+id/button_1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="3" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="+" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <Button
            android:id="@+id/button_4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="4" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="6" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="-" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <Button
            android:id="@+id/button_7"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="9" />

        <Button
            android:id="@+id/button_ymn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="x" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_reset"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="AC" />

        <Button
            android:id="@+id/button_znak"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Â±" />

        <Button
            android:id="@+id/button_proc"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="%" />

        <Button
            android:id="@+id/button_del"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="/" />
    </TableRow>

    <LinearLayout
        android:id="@+id/txtContainer"
        android:layout_width="409dp"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tableRow5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:gravity="right"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>